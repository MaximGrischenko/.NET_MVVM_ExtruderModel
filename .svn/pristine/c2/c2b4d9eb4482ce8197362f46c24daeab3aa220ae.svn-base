<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/charts"
             x:Class="ExtruderModel.Module.Graph.View.ChartView"
             d:DesignHeight="580"
             d:DesignWidth="705"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="77" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Height="60"
                BorderBrush="DarkOrange"
                BorderThickness="2">
            <StackPanel Grid.Row="0"
                        Height="60"
                        Background="LightGray"
                        Orientation="Horizontal">

                <Label Margin="100,0,0,0"
                       VerticalAlignment="Center"
                       Content="Графики переходного процесса регулирования"
                       FontFamily="Georgia"
                       FontSize="20"
                       FontWeight="DemiBold"
                       Foreground="Black" />
            </StackPanel>
        </Border>
        <Ellipse x:Name="Run"
                 Grid.Row="0"
                 Width="77"
                 Height="77"
                 Margin="10,0,0,0"
                 HorizontalAlignment="Left"
                 Fill="{StaticResource IGraph}"
                 Stroke="Black" />
        <Button Grid.Row="0"
                Width="51"
                Height="51"
                Margin="0,0,20,0"
                HorizontalAlignment="Right"
                Background="{StaticResource BExit}"
                Command="{Binding CloseCharts}" />
        <Grid Grid.Row="1"
            Background="{StaticResource backChart}">
        </Grid>
        <dxc:ChartControl HorizontalAlignment="Stretch"
                          Grid.Row="1"
                          VerticalAlignment="Top"
                          Opacity="0.8">
            <dxc:ChartControl.Legend>
                <dxc:Legend />
            </dxc:ChartControl.Legend>
            <dxc:XYDiagram2D>
                <dxc:XYDiagram2D.AxisY>
                    <dxc:AxisY2D GridLinesMinorVisible="True"
                                 Brush="#FFFFA200">
                        <dxc:AxisY2D.Title>
                            <dxc:AxisTitle Content="Температура, С"
                                           Visible="True"
                                           Alignment="Far" />
                        </dxc:AxisY2D.Title>
                    </dxc:AxisY2D>
                </dxc:XYDiagram2D.AxisY>
                <dxc:XYDiagram2D.AxisX>
                    <dxc:AxisX2D GridLinesVisible="True"
                                 GridLinesMinorVisible="True"
                                 Brush="#FFFFA200">
                        <dxc:AxisX2D.Title>
                            <dxc:AxisTitle Content="Время, сек"
                                           Visible="True"
                                           Alignment="Far" />
                        </dxc:AxisX2D.Title>
                    </dxc:AxisX2D>
                </dxc:XYDiagram2D.AxisX>
                <dxc:SplineSeries2D DisplayName="Темп. Зона 1">
                    <dxc:SeriesPoint />
                    <dxc:SeriesPoint />
                    <dxc:SeriesPoint />
                    <dxc:SeriesPoint />
                    <dxc:SeriesPoint />
                </dxc:SplineSeries2D>
                <dxc:SplineSeries2D DisplayName="Темп. Зона 2">
                    <dxc:SeriesPoint Argument="2"
                                     Value="8" />
                    <dxc:SeriesPoint Argument="3"
                                     Value="7" />
                    <dxc:SeriesPoint Argument="4"
                                     Value="14" />
                    <dxc:SeriesPoint Argument="5"
                                     Value="13" />
                    <dxc:SeriesPoint Argument="6"
                                     Value="20" />
                </dxc:SplineSeries2D>
                <dxc:SplineSeries2D DisplayName="Темп. Зона 3">
                    <dxc:SeriesPoint Argument="3"
                                     Value="9.5" />
                    <dxc:SeriesPoint Argument="4"
                                     Value="8.5" />
                    <dxc:SeriesPoint Argument="5"
                                     Value="15.5" />
                    <dxc:SeriesPoint Argument="6"
                                     Value="14.5" />
                    <dxc:SeriesPoint Argument="7"
                                     Value="21.5" />
                </dxc:SplineSeries2D>
                <dxc:SplineSeries2D DisplayName="Темп. Зона 4">
                    <dxc:SeriesPoint Argument="4"
                                     Value="11" />
                    <dxc:SeriesPoint Argument="5"
                                     Value="10" />
                    <dxc:SeriesPoint Argument="6"
                                     Value="17" />
                    <dxc:SeriesPoint Argument="7"
                                     Value="16" />
                    <dxc:SeriesPoint Argument="8"
                                     Value="23" />
                </dxc:SplineSeries2D>
                <dxc:SplineSeries2D DisplayName="Темп. Зона 5">
                    <dxc:SeriesPoint Argument="5"
                                     Value="12.5" />
                    <dxc:SeriesPoint Argument="6"
                                     Value="11.5" />
                    <dxc:SeriesPoint Argument="7"
                                     Value="18.5" />
                    <dxc:SeriesPoint Argument="8"
                                     Value="17.5" />
                    <dxc:SeriesPoint Argument="9"
                                     Value="24.5" />
                </dxc:SplineSeries2D>
                <dxc:SplineSeries2D DisplayName="Темп. Хомут">
                    <dxc:SeriesPoint Argument="6"
                                     Value="14" />
                    <dxc:SeriesPoint Argument="7"
                                     Value="13" />
                    <dxc:SeriesPoint Argument="8"
                                     Value="20" />
                    <dxc:SeriesPoint Argument="9"
                                     Value="19" />
                    <dxc:SeriesPoint Argument="10"
                                     Value="26" />
                </dxc:SplineSeries2D>
                <dxc:SplineSeries2D DisplayName="Темп. Голова">
                    <dxc:SeriesPoint Argument="7"
                                     Value="15.5" />
                    <dxc:SeriesPoint Argument="8"
                                     Value="14.5" />
                    <dxc:SeriesPoint Argument="9"
                                     Value="21.5" />
                    <dxc:SeriesPoint Argument="10"
                                     Value="20.5" />
                    <dxc:SeriesPoint Argument="11"
                                     Value="27.5" />
                </dxc:SplineSeries2D>
            </dxc:XYDiagram2D>
        </dxc:ChartControl>

    </Grid>
</UserControl>
