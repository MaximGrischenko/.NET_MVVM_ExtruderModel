<UserControl x:Class="ExtruderModel.Module.Message.View.MessageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="580" d:DesignWidth="705">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="77" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Height="60"
                BorderBrush="DarkOrange"
                BorderThickness="2">
            <StackPanel Grid.Row="0"
                        Height="60"
                        Background="LightGray"
                        Orientation="Horizontal">

                <Label Margin="100,0,0,0"
                       VerticalAlignment="Center"
                       Content="Список аварийных сообщений"
                       FontFamily="Georgia"
                       FontSize="20"
                       FontWeight="DemiBold"
                       Foreground="Black" />
            </StackPanel>
        </Border>
        <Ellipse x:Name="Run"
                 Grid.Row="0"
                 Width="77"
                 Height="77"
                 Margin="10,0,0,0"
                 HorizontalAlignment="Left"
                 Fill="{StaticResource IMessages}"
                 Stroke="Black" />
        <Button Grid.Row="0"
                Width="51"
                Height="51"
                Margin="0,0,20,0"
                HorizontalAlignment="Right"
                Background="{StaticResource BExit}"
                Command="{Binding CloseMessages}" />
        <TextBlock Grid.Row="1">
            
        </TextBlock>
    </Grid>
</UserControl>
